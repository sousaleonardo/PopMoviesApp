<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/movie_thumb_view"
    android:duplicateParentState="false">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@android:color/holo_green_dark"
        android:id="@+id/img_thumb_movie"
        android:contentDescription="Thumbnail with movie photo" />

    <TextView
        android:text="Film name to Show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:id="@+id/txt_movie_plot"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:textSize="24sp"
        android:textAlignment="gravity" />

</FrameLayout>
